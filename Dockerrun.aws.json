{
  "AWSEBDockerrunVersion" : 2,
  "containerDefinitions": [
    {
      "name": "clientapp",
      "image": "bajajn2/complex-clientapp",
      "hostname": "clientapp",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "bajajn2/complex-server",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "worker",
      "image": "bajajn2/complex-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "bajajn2/complex-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links" : ["clientapp","server"],
      "memory": 256
    }
  ]
}
